<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="@drawable/rounded_bottom_layout"
    android:orientation="vertical"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_centerVertical="true"
            android:layout_height="48dp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginLeft="8dp"
            android:id="@+id/tvUserName"
            android:layout_height="wrap_content"
            android:text="Paul Walker"
            android:textSize="18sp"
            style="@style/SemiBoldStyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/tvUserName"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:text="paulwalker@gmail.com"
            android:textSize="10sp"
            style="@style/MediumStyle"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_below="@id/tvUserName"

        android:layout_height="wrap_content"
        android:text="@string/manage_account"
        android:textSize="12sp"
        android:textColor="@color/blue"
        style="@style/MediumStyle"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minHeight="102dp"
        app:cardBackgroundColor="@color/input_text_color"
        app:cardCornerRadius="8dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/diamond"
                android:id="@+id/ivDiamond"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade to Premium"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_below="@id/textView"
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/ivDiamond"
                android:layout_marginTop="2dp"
                android:text="Experience unlimited downloads"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_below="@id/ivDiamond"
                style="@style/MediumStyle"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                app:strokeWidth="1.4dp"
                app:strokeColor="@color/primary_yellow"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/input_text_color"
                android:text="Upgrade to Premium"
                android:gravity="center"
                app:iconGravity="textStart"
                android:textColor="@color/primary_yellow"
                app:icon="@drawable/crown"
                app:iconTint="@color/primary_yellow"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivDiamond" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>