<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_tab_style">
        <item name="tabIndicator">@drawable/custom_tab_indicator</item>
    </style>

    <style name="CustomTabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_menu_bg</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">4%</item>
    </style>
</resources>